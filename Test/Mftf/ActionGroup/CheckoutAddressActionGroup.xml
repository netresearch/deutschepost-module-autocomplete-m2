<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="CheckoutFillStreetShippingAddressActionGroup">
        <arguments>
            <argument name="customer" type="entity"/>
        </arguments>
        <selectOption selector="{{CheckoutShippingSection.country}}" userInput="{{customer.country_id}}" stepKey="selectCustomerCountry"/>
        <fillField selector="{{CheckoutShippingSection.email}}" userInput="{{customer.email}}" stepKey="fillEmailField"/>
        <fillField selector="{{CheckoutShippingSection.firstName}}" userInput="{{customer.firstName}}" stepKey="fillFirstName"/>
        <fillField selector="{{CheckoutShippingSection.lastName}}" userInput="{{customer.lastName}}" stepKey="fillLastName"/>
        <fillField selector="{{CheckoutShippingSection.telephone}}" userInput="{{customer.telephone}}" stepKey="fillPhone"/>
        <fillField selector="{{CheckoutShippingSection.street}}" userInput="{{customer.streetInput}}" stepKey="fillStreet"/>
        <wait stepKey="waitForApiResponse" time="2"/>
        <seeElement selector="{{PostDirektCheckoutShippingAddressSection.suggestionList}}" stepKey="seeAutocompleteSuggestionList"/>
        <click selector="{{PostDirektCheckoutShippingAddressSection.firstSuggestion}}" stepKey="selectFirstSuggestion"/>
    </actionGroup>
    <actionGroup name="CheckoutFillCustomerStreetShippingAddressActionGroup">
        <arguments>
            <argument name="customer" type="entity"/>
        </arguments>
        <selectOption selector="{{CheckoutShippingSection.country}}" userInput="{{customer.country_id}}" stepKey="selectCustomerCountry"/>
        <fillField selector="{{CheckoutShippingSection.firstName}}" userInput="{{customer.firstName}}" stepKey="fillFirstName"/>
        <fillField selector="{{CheckoutShippingSection.lastName}}" userInput="{{customer.lastName}}" stepKey="fillLastName"/>
        <fillField selector="{{CheckoutShippingSection.telephone}}" userInput="{{customer.telephone}}" stepKey="fillPhone"/>
        <fillField selector="{{CheckoutShippingSection.street}}" userInput="{{customer.streetInput}}" stepKey="fillStreet"/>
        <wait stepKey="waitForApiResponse" time="2"/>
        <seeElement selector="{{PostDirektCheckoutShippingAddressSection.suggestionList}}" stepKey="seeAutocompleteSuggestionList"/>
        <click selector="{{PostDirektCheckoutShippingAddressSection.firstSuggestion}}" stepKey="selectFirstSuggestion"/>
    </actionGroup>
    <actionGroup name="CheckoutFillPostcodeBillingAddressGuestActionGroup">
        <arguments>
            <argument name="customer" type="entity"/>
        </arguments>
        <selectOption selector="{{CheckoutPaymentSection.guestCountry}}" userInput="{{customer.country_id}}" stepKey="selectCustomerCountry"/>
        <fillField selector="{{CheckoutPaymentSection.guestFirstName}}" userInput="{{customer.firstName}}" stepKey="fillBillingFirstName"/>
        <fillField selector="{{CheckoutPaymentSection.guestLastName}}" userInput="{{customer.lastName}}" stepKey="fillBillingLastName"/>
        <fillField selector="{{CheckoutPaymentSection.guestTelephone}}" userInput="{{customer.telephone}}" stepKey="fillBillingPhone"/>
        <fillField selector="{{CheckoutPaymentSection.guestPostcode}}" userInput="{{customer.inputPostalCode}}" stepKey="fillBillingPostcode"/>
        <wait stepKey="waitForApiResponse" time="2"/>
        <seeElement selector="{{PostDirektCheckoutShippingAddressSection.suggestionList}}" stepKey="seeAutocompleteBillingSuggestionList"/>
        <click selector="{{PostDirektCheckoutShippingAddressSection.firstSuggestion}}" stepKey="selectFirstBillingSuggestion"/>
        <wait stepKey="waitingForBillingAutoFill" time="5"/>
        <fillField selector="{{CheckoutPaymentSection.guestStreet}}" userInput="{{customer.streetInput}}" stepKey="fillBillingStreet"/>
        <wait stepKey="waitForApiResponseStreet" time="2"/>
        <seeElement selector="{{PostDirektCheckoutShippingAddressSection.suggestionList}}" stepKey="seeAutocompleteBillingStreetSuggestionList"/>
        <click selector="{{PostDirektCheckoutShippingAddressSection.firstSuggestion}}" stepKey="selectFirstBillingStreetSuggestion"/>
    </actionGroup>

    <actionGroup name="CheckoutFillPostcodeBillingAddressCustomerActionGroup">
        <arguments>
            <argument name="customer" type="entity"/>
        </arguments>
        <!-- set billing country code to germany -->
        <selectOption selector="{{CheckoutPaymentSection.guestCountry}}" userInput="{{customer.country_id}}" stepKey="selectCustomerCountry"/>
        <!-- fill phone & postcode input -->
        <fillField selector="{{CheckoutPaymentSection.guestTelephone}}" userInput="{{customer.telephone}}" stepKey="fillBillPhone"/>
        <fillField selector="{{CheckoutPaymentSection.guestPostcode}}" userInput="{{customer.inputPostalCode}}" stepKey="fillBillingPostcode"/>
        <wait stepKey="waitForApiResponse" time="2"/>
        <!-- check data list is rendered & click on first suggestion-->
        <seeElement selector="{{PostDirektCheckoutShippingAddressSection.suggestionList}}" stepKey="seeAutocompleteBillingSuggestionList"/>
        <click selector="{{PostDirektCheckoutShippingAddressSection.firstSuggestion}}" stepKey="selectFirstBillingSuggestion"/>
        <wait stepKey="waitingForBillingAutoFill" time="5"/>
        <!-- fill street input -->
        <fillField selector="{{CheckoutPaymentSection.guestStreet}}" userInput="{{customer.streetInput}}" stepKey="fillBillingStreet"/>
        <wait stepKey="waitForApiResponseStreet" time="2"/>
        <!-- check data list is rendered & click on first suggestion-->
        <seeElement selector="{{PostDirektCheckoutShippingAddressSection.suggestionList}}" stepKey="seeAutocompleteBillingStreetSuggestionList"/>
        <click selector="{{PostDirektCheckoutShippingAddressSection.firstSuggestion}}" stepKey="selectFirstBillingStreetSuggestion"/>
    </actionGroup>

    <actionGroup name="CheckAutocompletedAddress">
        <arguments>
            <argument name="customer" type="entity"/>
            <argument name="informationContainer" type="entity"/>
        </arguments>
        <see stepKey="checkFilledStreet" selector="{{informationContainer}}" userInput="{{customer.street}}"/>
        <see stepKey="checkFilledCity" selector="{{informationContainer}}" userInput="{{customer.city}}"/>
        <see stepKey="checkPostalCode" selector="{{informationContainer}}" userInput="{{customer.postalCode}}"/>
    </actionGroup>
</actionGroups>
